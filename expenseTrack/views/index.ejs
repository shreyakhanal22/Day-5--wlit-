<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title%></p>
    <a href="/add" class="btn btn-primary">Add expense</a>
    <div style="margin-left: 80%;width: max-content;">
  </div>

      <% expenseList.forEach((expenses,i)=> { %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= expenses.Title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= expenses.PaidBy%></h6>
            <p class="card-text"><%= expenses.Description %></p>
            <p class="card-text"><%= expenses.Amount %></p>
            <a href="/edit/<%=expenses.Id%>" class="btn btn-success">Update</a>
            <a href="/delete/<%= i%>"  class="btn btn-danger">Delete</a>
    </div>     
<% }) %>

  </body>
</html>
